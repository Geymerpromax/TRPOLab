<Window x:Class="Lab9API.Ex2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lab9API"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Географические координаты" Height="300" Width="400">
    <Grid>
        <DataGrid x:Name="CoordinatesDataGrid" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Город" Binding="{Binding City}" Width="*"/>
                <DataGridTextColumn Header="Долгота" Binding="{Binding Longitude}" Width="*"/>
                <DataGridTextColumn Header="Широта" Binding="{Binding Latitude}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
